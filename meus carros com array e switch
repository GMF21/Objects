#include <iostream>

using namespace std;

struct carro{
    string modelo;
    string marca;
    
};







carro carros1[]{"Ferrari", "458 italia 570cv"};
carro carros2[]{"Mustang"};
carro carros3[]{"Lamborghini"};

int main() {
    int escolha = 0;

    cout << "Escolha um nÃºmero de carro 1 ou 2 ou 3: " << endl;
    cin >> escolha;

    switch(escolha) {
        case 1:
            cout << carros1[0].modelo << carros1[0].marca << endl;
            break;
        case 2:
            cout << carros2[0] << endl;
            break;
        case 3:
            cout << carros3[0] << endl;
            break;
        default:
            cerr << "Por favor, escolhe 1, 2 ou 3." << endl;
            break;
    }

    return 0;
}
